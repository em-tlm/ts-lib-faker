{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "ttlUrn",
    "weighingMethodName",
    "assay"
  ],
  "properties": {
    "ttlUrn": {
      "type": "string",
      "faker": "random.uuid"
    },
    "weighingMethodName": {
      "type": "string",
      "examples": [
        "BWM000001"
      ],
      "pattern": "^BWM[0-9]{6}$"
    },
    "assay": {
      "type": "object",
      "required": [
        "ttlUrn",
        "name"
      ],
      "properties": {
        "ttlUrn": {
          "type": "string",
          "faker": "random.uuid"
        },
        "name": {
          "type": "string",
          "examples": [
            "ASM000001"
          ],
          "pattern": "^ASM[0-9]{6}$"
        }
      }
    }
  }
}
